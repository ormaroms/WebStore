@model IEnumerable<WebStore.Models.Pants>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("Shoes", "Shoes", "Man")</li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Pants" ?
                    "active" : "")">@Html.ActionLink("Pants", "Pants", "Man")</li>
                    @* ליצור לזה מה שצריךךךך אין לנו כוח *@
                    <li>@Html.ActionLink("Shirts", "Shirts", "Man")</li>
                </ul>
            </div>
        </nav>

        <div class="displayRow">
            @foreach (var item in Model)
            {
                <div class="displayCol">
                    <img src="@Url.Content(item.ImgPath)" alt="Image" class="displayImg" />
                    <p> @item.Price ₪</p>
                </div>
            }
        </div>

